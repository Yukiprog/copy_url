{
  "manifest_version": 2,
  "name": "copy_url",
  "version": "1.0",
  "description": "Click icon to paste URL to clipboard",
  "icons": {
    "48": "icons/c_48.png"
  },

  "permissions": [
    "tabs",
    "clipboardWrite"
  ],

  "page_action": {
    "default_icon": "icons/c_32.png",
    "default_title": "Copy!",
    "show_matches": ["*://*/*"]
  },

  "background": {
    "scripts": ["background.js"]
  }
  
}
